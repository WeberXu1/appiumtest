import unittest
from useForTest import AppTest
from HTMLTestRunner import HTMLTestRunner

if __name__ == '__main__':
    suite = unittest.TestSuite()

    tests = [AppTest("test_putupdatetoscreen")]
    suite.addTests(tests)

    with open('C:\\Users\\77465\\Desktop\\HTMLReport.html', 'w') as f:
        runner = HTMLTestRunner(stream=f,
                                title='Update MINI Test Report',
                                description='generated by HTMLTestRunner.',
                                verbosity=2
                                )
        runner.run(suite)